package methods;

public class Mymethod {


		// TODO Auto-generated method stub
		 public static int findMissingNumber(int[] arr) {
		        int n = arr.length + 1;
		        int totalSum = n * (n + 1) / 2;
		        int arraySum = 0;
		        for (int num : arr) {
		            arraySum += num;
		        }
		        return totalSum - arraySum;
		    }

		    public static void main(String[] args) {
		        // Test cases
		        int[] arr1 = {1, 2, 3, 5}; // Missing number: 4
		        int[] arr2 = {1, 2, 4, 5, 6}; // Missing number: 3
		        int[] arr3 = {2, 3, 4, 5}; // Missing number: 1
		        System.out.println("Missing number in arr1: " + findMissingNumber(arr1)); // Output: 4
		        System.out.println("Missing number in arr2: " + findMissingNumber(arr2)); // Output: 3
		        System.out.println("Missing number in arr3: " + findMissingNumber(arr3)); // Output: 1
		    }
		}

	


